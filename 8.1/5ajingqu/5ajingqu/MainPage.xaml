                                        AdBannerWillExpand="ad1_AdBannerWillExpand"                       
                                        
                                        AppWillResumeFromAd="ad1_AppWillResumeFromAd"                           
                                        AppWillSuspendForAd="ad1_AppWillSuspendForAd"-->

                </phone:PanoramaItem>
